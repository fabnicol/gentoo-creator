export DEBIAN_FRONTEND=noninteractive
apt update -yq
apt upgrade -yq <<< $(echo N)
apt install -yq  build-essential gcc <<< $(echo N)
apt-get -yq install acpica-tools chrpath doxygen g++-multilib libasound2-dev libcap-dev         libcurl4-openssl-dev libdevmapper-dev libidl-dev libopus-dev libpam0g-dev         libpulse-dev libqt5opengl5-dev libqt5x11extras5-dev libsdl1.2-dev libsdl-ttf2.0-dev         libssl-dev libvpx-dev libxcursor-dev libxinerama-dev libxml2-dev libxml2-utils         libxmu-dev libxrandr-dev make nasm python3-dev python-dev qttools5-dev-tools         texlive texlive-fonts-extra texlive-latex-extra unzip xsltproc                 default-jdk libstdc++5 libxslt1-dev linux-kernel-headers makeself mesa-common-dev subversion yasm zlib1g-dev lib32z1 libc6-dev-i386 lib32gcc1 lib32stdc++6 <<< $(echo N)
ln -s libX11.so.6    /usr/lib32/libX11.so 
ln -s libXTrap.so.6  /usr/lib32/libXTrap.so 
ln -s libXt.so.6     /usr/lib32/libXt.so
ln -s libXtst.so.6   /usr/lib32/libXtst.so
ln -s libXmu.so.6    /usr/lib32/libXmu.so
ln -s libXext.so.6   /usr/lib32/libXext.so
wget https://download.virtualbox.org/virtualbox/${VERSION}/VirtualBox-${VERSION_FULL}.tar.bz2 
tar xjvf VirtualBox-6.1.14a.tar.bz2
rm -f VirtualBox*bz2 
apt install -qy $(apt-cache search linux-headers | tail -n1 | cut -f 1 -d' ')
apt install -qy $(apt-cache search linux-image | grep -v unsigned | tail -n1 | cut -f 1 -d' ')
apt install -qy docbook docbook-xml
cd VirtualBox* && ./configure --disable-hardening
source ./env.sh
sed -i "${LINENO_PATCH}d" src/VBox/Storage/testcase/vbox-img.cpp 
kmk all
kmk packing
cd out/linux.amd64/release/bin/src/
KV=$(apt-cache search linux-headers | tail -n1 | cut -f 1 -d' ' | sed 's/linux-headers-//')
make KERN_VER=${KV}
make KERN_VER=${KV} install
cd ../..
rm -rf obj/
exit 0
